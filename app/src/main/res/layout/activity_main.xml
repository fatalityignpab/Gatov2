<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FEFFC7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugador: "
            android:textSize="12pt"
            android:textColor="#1613A5"/>

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="#084209"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/txtCuadro1"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="*"
            android:textSize="30pt"
            android:background="#80DE6A"/>

        <EditText
            android:id="@+id/txtCuadro2"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="*"
            android:textSize="30pt"
            android:background="#FDCC7F"/>

        <EditText
            android:id="@+id/txtCuadro3"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="*"
            android:textSize="30pt"
            android:background="#80DE6A"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/txtCuadro4"
                android:layout_width="40pt"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:hint="*"
                android:textSize="30pt"
                android:background="#FDCC7F"/>

            <EditText
                android:id="@+id/txtCuadro5"
                android:layout_width="40pt"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:hint="*"
                android:textSize="30pt"
                android:background="#80DE6A"/>

            <EditText
                android:id="@+id/txtCuadro6"
                android:layout_width="40pt"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:hint="*"
                android:textSize="30pt"
                android:background="#FDCC7F"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtCuadro7"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:background="#80DE6A"
            android:gravity="center"
            android:hint="*"
            android:textSize="30pt" />

        <EditText
            android:id="@+id/txtCuadro8"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="*"
            android:textSize="30pt"
            android:background="#FDCC7F"/>

        <EditText
            android:id="@+id/txtCuadro9"
            android:layout_width="40pt"
            android:layout_height="wrap_content"
            android:background="#80DE6A"
            android:gravity="center"
            android:hint="*"
            android:textSize="30pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="30pt"
            android:textColor="#4049FE"
            android:background="#BCBFFF"/>

        <Button
            android:id="@+id/btnO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:textSize="30pt"
            android:textColor="#C31111"
            android:background="#FC9E9E"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnReinicio"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reiniciar"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial"
            android:id="@+id/btnHist"
            android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>
